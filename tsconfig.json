{
    "compilerOptions": {
		"module": "commonjs",
        "target": "es5",
		"lib": [
			"es6",
			"es2016",
			"es2017",
			"dom"
		],
		"sourceMap": true,
		"declaration": true,
		"types": ["node"],
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
    	"importHelpers": true,
		"preserveSymlinks": true
    },
	"include": [
		"src/**/*"
	],
	"exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
